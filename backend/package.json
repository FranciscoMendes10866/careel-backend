{
  "name": "careel",
  "version": "1.0.0",
  "main": "main.js",
  "license": "CC0-1.0",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify --files ./src/main.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "serve": "node ./build/main.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix src --ext .ts",
    "prisma:studio": "prisma studio --experimental",
    "prisma:intro": "prisma introspect",
    "prisma:save": "prisma migrate save --experimental --name",
    "prisma:migrate": "prisma migrate up --experimental"
  },
  "dependencies": {
    "@prisma/cli": "^2.3.0",
    "@prisma/client": "^2.3.0",
    "bcrypt": "^5.0.0",
    "cloudinary": "^1.22.0",
    "dotenv": "^8.2.0",
    "joi": "^17.1.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^5.2.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.1.0",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "pg": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.0",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-router": "^7.4.1",
    "@types/multer": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.6.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
